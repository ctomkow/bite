# Show OS info
lsb_release -a
lsb_release -d

# Show more file details (permission octets)
stat <file>

# Add user to group
usermod -a -G <group> <user>

# centos 6.* start service
service <service> start

# show disk usage of folder
du -sh <file_path>

# copy files from remote
scp user@remote.host:/path/to/file /local/dir
